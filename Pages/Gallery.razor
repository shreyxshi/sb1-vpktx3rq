@page "/gallery"

<PageTitle>Gallery - C# Creative Canvas</PageTitle>

<div class="container mx-auto">
    <h1 class="text-3xl font-bold mb-8">Gallery</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var artwork in featuredArtworks)
        {
            <div class="bg-gray-800 rounded-lg overflow-hidden hover:shadow-lg hover:shadow-blue-500/20 transition-all duration-300">
                <img src="@artwork.ImageUrl" alt="@artwork.Title" class="w-full h-48 object-cover" />
                <div class="p-4">
                    <h3 class="text-xl font-semibold mb-2">@artwork.Title</h3>
                    <p class="text-gray-400 mb-3">By @artwork.Creator</p>
                    <div class="flex justify-between items-center">
                        <span class="text-sm text-gray-500">@artwork.Date.ToShortDateString()</span>
                        <button class="text-blue-400 hover:text-blue-300">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"></path><polyline points="16 6 12 2 8 6"></polyline><line x1="12" y1="2" x2="12" y2="15"></line></svg>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <div class="text-center mt-12">
        <p class="text-gray-400 mb-4">Your creations will appear here once you save them.</p>
        <a href="/" class="btn btn-primary">Create New Artwork</a>
    </div>
</div>

