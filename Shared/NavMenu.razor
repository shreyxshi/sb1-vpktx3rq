<header class="bg-transparent text-white py-4">
    <div class="container mx-auto px-4">
        <div class="flex justify-between items-center">
            <div class="flex items-center">
                <span class="font-bold text-2xl tracking-tight">
                    <span class="text-blue-500">C#</span> Creative Canvas
                </span>
            </div>
            <nav class="hidden md:block">
                <ul class="flex space-x-8">
                    <li><NavLink href="" Match="NavLinkMatch.All" class="hover:text-blue-400 transition-colors duration-200">Home</NavLink></li>
                    <li><NavLink href="gallery" class="hover:text-blue-400 transition-colors duration-200">Gallery</NavLink></li>
                    <li><NavLink href="about" class="hover:text-blue-400 transition-colors duration-200">About</NavLink></li>
                </ul>
            </nav>
            <button class="md:hidden focus:outline-none" @onclick="ToggleMenu">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>
    </div>
    @if (showMobileMenu)
    {
        <div class="md:hidden bg-gray-800 py-4 px-4 mt-2 rounded-lg">
            <ul class="space-y-3">
                <li><NavLink href="" Match="NavLinkMatch.All" class="block hover:text-blue-400 transition-colors duration-200" @onclick="CloseMobileMenu">Home</NavLink></li>
                <li><NavLink href="gallery" class="block hover:text-blue-400 transition-colors duration-200" @onclick="CloseMobileMenu">Gallery</NavLink></li>
                <li><NavLink href="about" class="block hover:text-blue-400 transition-colors duration-200" @onclick="CloseMobileMenu">About</NavLink></li>
            </ul>
        </div>
    }
</header>

@code {
    private bool showMobileMenu = false;

    private void ToggleMenu()
    {
        showMobileMenu = !showMobileMenu;
    }

    private void CloseMobileMenu()
    {
        showMobileMenu = false;
    }
}